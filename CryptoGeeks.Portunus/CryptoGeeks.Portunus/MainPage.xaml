<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CryptoGeeks.Portunus"
             x:Class="CryptoGeeks.Portunus.MainPage"
             Title="{Binding AppTitle}"
             BackgroundColor="{StaticResource navy}">

    <StackLayout>
        <StackLayout>
            <Label Text="Step 1"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="Enter your personal details"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />


            <Label Text="Your personal details are required for verification of your identity"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />


            <Label Text="Last Name"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"  Style="{StaticResource SignInText}"/>

            <Entry 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />



        </StackLayout>
    </StackLayout>

</ContentPage>

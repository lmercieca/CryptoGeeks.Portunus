<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoGeeks.Portunus.Views.Dashboard.Loading"  
             BackgroundColor="{StaticResource HighlightBackground}"
    <ContentPage.Content>
    <StackLayout HorizontalOptions="FillAndExpand">

        <Image HorizontalOptions="Start"  Margin="0,20,0,0"
           VerticalOptions="Start" 
           Source="logo.png" />


        <Grid>

            <Grid x:Name="loadingOverlay" IsVisible="{Binding IsLoading}">
                <ActivityIndicator IsRunning="{Binding IsLoading}" />
            </Grid>
        </Grid>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoGeeks.Portunus.Landing">
    <ContentPage.Content HorizontalOptions="CenterAndFill" VerticalOptions="CenterAndFill" BackgroundColor="{StaticResource ButtonBackColor}" >

        <StackLayout Padding="10" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" >
            <Image x:Name="LogoImage" VerticalOptions="CenterAndExpand"  HorizontalOptions="CenterAndExpand"
                 Source="LogoSmall.png"/>

            <Image x:Name="TitleImage" Opacity="0"  VerticalOptions="Center"  HorizontalOptions="Center" Scale="0.5"  Source="fullnamelogo.png"/>
            <Label x:Name="TitleText" FontSize="15" Opacity="0" Text="Never lose your private key again!" TextColor="{StaticResource ButtonTextColor}" VerticalOptions="Center"  HorizontalOptions="Center"></Label>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>